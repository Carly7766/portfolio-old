{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2021"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "jsxImportSource": "@emotion/react"
  },
  "include": ["./src/**/*"]
}
